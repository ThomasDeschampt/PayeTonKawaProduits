{
  "info": {
    "name": "API Produits",
    "description": "Collection pour tester l'API des produits avec Prisma",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Produits",
      "item": [
        {
          "name": "Afficher tous les produits",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/afficherAll",
              "host": ["{{baseUrl}}"],
              "path": ["afficherAll"]
            }
          }
        },
        {
          "name": "Ajouter un produit",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.id) {",
                  "        pm.environment.set('uuid', response.data.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"café\",\n  \"prix\": 9.99,\n  \"description\": \"Dernier café\",\n  \"stock\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ajouter",
              "host": ["{{baseUrl}}"],
              "path": ["ajouter"]
            }
          }
        },
        {
          "name": "Afficher un produit par UUID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/afficher/{{uuid}}",
              "host": ["{{baseUrl}}"],
              "path": ["afficher", "{{uuid}}"]
            }
          }
        },
		{
		  "name": "Modifier un produit",
		  "request": {
			"method": "PUT",
			"header": [
			  {
				"key": "Content-Type",
				"value": "application/json"
			  },
			  {
				"key": "Authorization",
				"value": "Bearer {{jwtToken}}"
			  }
			],
			"body": {
			  "mode": "raw",
			  "raw": "{\n  \"nom\": \"café Pro\",\n  \"prix\": 19.99,\n  \"description\": \"café Pro\",\n  \"stock\": 30\n}"
			},
			"url": {
			  "raw": "{{baseUrl}}/modifier/{{uuid}}",
			  "host": ["{{baseUrl}}"],
			  "path": ["modifier", "{{uuid}}"]
			}
		  }
		},
        {
          "name": "Supprimer un produit",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/supprimer/{{uuid}}",
              "host": ["{{baseUrl}}"],
              "path": ["supprimer", "{{uuid}}"]
            }
          }
        }
      ]
    }
  ]
}
