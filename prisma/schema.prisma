generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produit {
  id          String   @id @default(uuid())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  nom         String   @db.VarChar()
  prix        Float
  description String?  @db.Text
  stock       Int

  @@map("produits")
}